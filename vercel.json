{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    },
    { "src": "frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.js"
    },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
